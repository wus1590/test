<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
      <header>
        <% include ../partials/header %>
      </header>
      <div class="posts">
      <% include partials/top %>

      <!--main start -->
      <div class="show">
        <h3><%= data.title %></h3>
        <div class="time">Created at <br>
          <%= data.createAt.toLocaleDateString() %> <br>
          <%= data.createAt.toLocaleTimeString() %>
        </div>
        <% if (data.updateAt) { %>
          <div class="time">Updated at <br>
            <%= data.updateAt.toLocaleDateString() %><br>
            <%= data.updateAt.toLocaleTimeString() %>
          </div>
        <% } %>
        <p class="body"><%= data.body %></p>
        <div class="tools">
          <a href="/posts/<%=data._id%>/edit"><button>Edit</button></a>
          <form class="btn_delete" action="/posts/<%=data._id%>?_method=delete" method="post">
            <button type="submit">Delete</button>
          </form>
        </div>
        <a href="/posts"><button>Back</button></a>
      <!-- main end -->
    </div><!-- posts end -->
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
